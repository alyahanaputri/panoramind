        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }
      .answer {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 10px;
        cursor: pointer;
        width: calc(50% - 5px);
        text-align: center;
      }
